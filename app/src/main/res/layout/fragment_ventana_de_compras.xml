 <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="4"
    android:columnOrderPreserved="false"
    android:orientation="vertical"
    android:useDefaultMargins="true"
    tools:context="com.example.christopher.sceandroid.VentanaDeCompras"
    android:paddingLeft="15dp">

    <ImageButton
        android:id="@+id/botonGolosina"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_column="0"
        android:layout_row="0"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/candyicon" />

    <ImageButton
        android:id="@+id/botonBebida"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_column="1"
        android:layout_row="0"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/bebidaicon" />

    <ImageButton
        android:id="@+id/botonLacteo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_column="2"
        android:layout_row="0"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/milkicon" />

    <ImageButton
        android:id="@+id/botonHelado"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_column="0"
        android:layout_row="1"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/icecreamicon" />

    <ImageButton
        android:id="@+id/botonPaquete"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_column="1"
        android:layout_row="1"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/paquetedeldia" />

    <ImageButton
        android:id="@+id/botonPreparado"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_column="2"
        android:layout_row="1"
        android:background="@null"
        android:clickable="false"
        android:scaleType="fitCenter"
        android:src="@drawable/preparadoicon" />

    <ImageButton
        android:id="@+id/botonConfirmar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_column="1"
        android:layout_row="2"
        android:adjustViewBounds="false"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/shop" />

</GridLayout>
